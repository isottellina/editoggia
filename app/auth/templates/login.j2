{% extends 'base.j2' %}

{% block title %} {{ _("Log in") }} {% endblock %}

{% block content %}
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
	<div class="col-lg-8 text-justified">
	  <h2 class="title text-center"> {{ _("Log in") }} </h2>
	  <form action="{{ url_for('auth.login') }}" method="POST">
	    {{ form.csrf_token }}
	    <div class="row">
	      <div class="form-group col-lg-6">
		<label for="usernameInput">{{ _("Username") }}*</label>
		{{ form.username(class_="form-control", id="usernameInput") }}
	      </div>
	      <div class="form-group col-lg-6">
		<label for="passwordInput">{{ _("Password") }}*</label>
		{{ form.password(class_="form-control", id="passwordInput") }}
	      </div>
	    </div>
	    <div class="row pt-2">
	      <div class="form-group col-lg-12">
		<button type="submit" class="btn btn-primary btn-block">{{ _("Submit") }}</button>
	      </div>
	    </div>
	  </form>
	</div>
      </div>
    </div>
  </section>
{% endblock %}
