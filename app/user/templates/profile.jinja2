{% extends 'base.jinja2' %}

{% block title %}
  {% if user.name %}
    {{ user.name }} (@{{ user.username }})
  {% else %}
    @{{ user.username }}
  {% endif %}
{% endblock %}

{% block content %}
  <section class="container mt-1" id="main_profile">
    <div class="row">
      <div class="col-lg-3">
	<div class="d-flex align-items-baseline">
	  {% if user.name %}
	    <h2 class="border-bottom">{{ user.name }}</h2>
	    <div class="ml-auto text-muted">@{{ user.username }}</div>
	  {% else %}
	    <h2 class="border-bottom">@{{ user.username }}</h2>
	  {% endif %}
	</div>
	Info here
	{% if editable %}
	  <a class="btn btn-primary btn-block" href="#">
	    {{ _("Edit profile") }}
	  </a>
	{% endif %}
      </div>
      <hr class="mt-0"/>
      <div class="col-lg-9">
	<nav class="nav profile-nav">
	  <a class="nav-link text-dark active" href="#">Bio</a>
	  <a class="nav-link text-dark" href="#">Stories</a>
	</nav>
	{# TODO: Bio #}
	Bio here
      </div>
  </section>
{% endblock %}
