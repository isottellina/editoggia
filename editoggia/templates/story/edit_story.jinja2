{% from 'components/field.jinja2' import render_field %}
{% extends 'base.jinja2' %}

{% block title %} {{ _("Edit story") }} {% endblock %}

{% block content %}
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
	<div class="col-lg-7">
	  <h2> {{ _("Edit story") }} </h2>
	  <form action="{{ url_for('story.edit_story', story_id=story.id) }}" method="POST">
	    {{ form.csrf_token }}
	    <div class="row">
	      {{ render_field(form.title) }}
	    </div>
	    <div class="row">
	      {{ render_field(form.rating) }}
	    </div>
	    <div class="row">
	      {{ render_field(form.summary, rows=5) }}
	    </div>
	    <div class="row">
	      {{ render_field(form.fandom) }}
	    </div>
	    <div class="row">
	      {{ render_field(form.tags) }}
	    </div>
	    <div class="row pt-2">
	      <div class="form-group col-lg-12">
		<button type="submit" class="btn btn-primary btn-block">{{ _("Submit") }}</button>
	      </div>
	    </div>
	  </form>
	</div>
	<div class="col-lg-3">
	  <h2>{{ _("Edit chapters") }}</h2>
	  <div class="list-group list-group-flush">
	    {% for chapter in story.chapters %}
	      <a class="list-group-item list-group-item-action" href="{{ url_for('story.edit_chapter', story_id=story.id, chapter_id=chapter.id) }}">
		{% if chapter.title %}
		  {{ _("Chapter {chapter_nb}: {chapter_title}").format(chapter_nb=chapter.nb, chapter_title=chapter.title) }}
		{% else %}
		  {{ _("Chapter {chapter_nb}").format(chapter_nb=chapter.nb) }}
		{% endif %}
	      </a>
	    {% endfor %}
	  </div>
	  <a class="btn btn-block btn-secondary mt-1" href="{{ url_for('story.post_chapter', story_id=story.id) }}">
	    {{ _("Add a chapter") }}
	  </a>
	</div>
      </div>
    </div>
  </section>
{% endblock %}

{% block javascript %}
  {{ super() }}
  {% assets 'js_select2' %}
  <script src="{{ ASSET_URL }}"></script>
{% endassets %}
{% endblock %}
