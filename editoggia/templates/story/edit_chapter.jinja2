{% from 'components/field.jinja2' import render_field %}
{% extends 'base.jinja2' %}

{% block title %} {{ _("Edit chapter") }} {% endblock %}

{% block content %}
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
	<div class="col-lg-10">
	  <h2> {{ _("Edit chapter") }} </h2>
	  <form action="{{ url_for('story.edit_chapter', story_id=chapter.story.id, chapter_id=chapter.id) }}" method="POST">
	    {{ form.csrf_token }}
	    <div class="row">
	      {{ render_field(form.title, col="col-lg-10") }}
	      {{ render_field(form.nb, col="col-lg-2") }}
	    </div>
	    <div class="row">
	      {{ render_field(form.summary, rows=5) }}
	    </div>
	    <div class="row">
	      {{ render_field(form.content, rows=20) }}
	    </div>
	    <div class="row pt-2">
	      <div class="form-group col-lg-12">
		<button type="submit" class="btn btn-primary btn-block">{{ _("Submit") }}</button>
	      </div>
	    </div>
	  </form>
	</div>
      </div>
    </div>
  </section>
{% endblock %}
