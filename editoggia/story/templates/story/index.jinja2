{% extends 'base.jinja2' %}

{% block title %} {{ _("Story list") }} {% endblock %}

{% block content %}
  <section class="container mt-1" id="main_profile">
    <div class="row">
      <div class="col-lg-3">
	{# Maybe search here later #}
      </div>
      <div class="col-lg-9">
	{% for story in stories %}
	  <div>
	    <a href="{{ url_for('story.show_story', story_id=story.id) }}">{{ story.name }}</a>,
	    by <a href="{{ url_for('user.profile', username=story.author.username) }}">{{ story.author }}</a>
	  </div>
	{% endfor %}
      </div>
  </section>
{% endblock %}
